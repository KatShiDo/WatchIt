<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watchit">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WatchIt">
        <activity
            android:name=".activities.LogoActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WatchIt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TitleActivity" />
        <activity android:name=".activities.FriendActivity" />
        <activity android:name=".activities.MainActivity"
            android:theme="@style/Theme.WatchIt.NoActionBar"/>
        <activity android:name=".activities.AddFriendActivity" />
        <activity android:name=".activities.AddTitleActivity" />
    </application>

</manifest>